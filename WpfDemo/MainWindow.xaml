<Window x:Class="WpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="MinWidth" Value="200" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>
    </Window.Resources>

    <StackPanel Margin="20" Orientation="Vertical">
        <Button Content="Controls" Click="ButtonBase_OnClick_Controls" />
        <Button Content="XAML and code behind" Click="ButtonBase_OnClick_XamlAndCodeBehind" />
        <Button Content="Panels" Click="ButtonBase_OnClick_Panels" />
        <Button Content="Resources" Click="ButtonBase_OnClick_Resources" />
        <Button Content="Data binding" Click="ButtonBase_OnClick_DataBinding" />
        <Button Content="Dependency and attached properties" Click="ButtonBase_OnClick_DependencyAndAttachedProperties" />
        <Button Content="Data templates" Click="ButtonBase_OnClick_DataTemplates" />
        <Button Content="Data triggers" Click="ButtonBase_OnClick_DataTriggers" />
    </StackPanel>
    
</Window>
